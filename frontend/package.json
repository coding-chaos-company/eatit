{
  "name": "eatit",
  "displayName": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "version": "0.0.4",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build-docker": "docker compose -f ../docker/vrt/docker-compose.yml run --rm vrt yarn build",
    "dev:api": "docker compose -f ../docker-compose.yml up -d",
    "dev:mock": "json-server --watch ./mock/db.json -p 3000 -m ./mock/middleware.js",
    "db:migrate": "docker compose -f ../docker-compose.yml exec api python migrate_db.py",
    "package": "plasmo package",
    "ci": "biome ci .",
    "format": "biome check --apply-unsafe .",
    "test:unit": "NODE_ENV=test jest src --ci",
    "test:vrt": "playwright test tests/vrt",
    "test:vrt-docker": "yarn build-docker && docker compose -f ../docker/vrt/docker-compose.yml run --rm vrt yarn test:vrt"
  },
  "dependencies": {
    "immer": "10.0.4",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.0",
    "@playwright/test": "1.42.1",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/chrome": "0.0.263",
    "@types/jest": "29.5.12",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.11.25",
    "@types/react": "18.2.64",
    "@types/react-dom": "18.2.21",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-transform-stub": "2.0.0",
    "jest-webextension-mock": "3.8.9",
    "json-server": "0.17.4",
    "os-browserify": "0.3.0",
    "path-browserify": "1.0.1",
    "ts-jest": "29.1.2",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  },
  "manifest": {
    "name": "__MSG_extensionName__",
    "host_permissions": [
      "https://github.com/*"
    ],
    "permissions": [],
    "default_locale": "ja",
    "web_accessible_resources": [
      {
        "resources": [
          "assets/**/*"
        ],
        "matches": [
          "https://github.com/*"
        ]
      }
    ]
  },
  "engines": {
    "node": "20.11.1",
    "npm": "use yarn instead",
    "yarn": "4.1.1"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": "last 2 versions, not dead, > 0.2%"
      }
    }
  }
}
